@page "/"
@using BestBuyBlazorDemoWebApp.Data
@inject ProductRepo repo

@{
    var product = repo.GetAllProducts();
}

<h1 class="border border-danger">Pro   ducts</h1>

<table class="table table-striped table-dark table-hover">
        <tr>
            <th>ProductID</th>
            <th>Name</th>
            <th>Price</th>
            <th>CategoryID</th>
            <th>OnSale</th>
            <th>StockLevel</th>
        </tr>

        @foreach (var p in product)
        {
            <tr>
                <td><a href=/Product/ViewProduct/@p.ProductID>@p.ProductID</a></td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.CategoryID</td>
                <td>@p.OnSale</td>
                <td>@p.StockLevel</td>
            </tr>

        }
    </table>
